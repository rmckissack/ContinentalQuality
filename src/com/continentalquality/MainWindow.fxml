<BorderPane fx:controller="com.continentalquality.MainWindowController" prefHeight="768" prefWidth="1024" stylesheets="@StyleSheet.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"> <!-- xmlns:fx="http://javafx.com/fxml/1"> -->
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu text="FIFO List" />
                <Menu text="Dock">
                  <items>
                    <MenuItem text="Receiving" />
                        <MenuItem text="Shipping" />
                        <MenuItem text="Edit Parts" />
                  </items>
                </Menu>
                  <Menu text="Sorting" >
                  <items>
                      <MenuItem text="New Tally Sheet" onAction="#loadTally"/>
                  </items>
                  </Menu>
                  <Menu text="Reports">
                    <items>
                      <MenuItem text="Lots in house" />
                        <Menu text="Completed Parts">
                          <items>
                            <MenuItem text="Search All By Date" />
                              <MenuItem text="Search By Part" />
                          </items>
                        </Menu>
                        <MenuItem text="Search By Lot" />
                        <MenuItem text="Unspecified Action" />
                    </items>
                  </Menu>
                  <Menu text="Administration">
                    <items>
                      <MenuItem text="Action 1" />
                    </items>
                  </Menu>
                <Menu text="Help">
                  <items>
                    <MenuItem text="About" />
                  </items>
                </Menu>
              </menus>
               <HBox.margin>
                  <Insets left="25.0" right="25.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </MenuBar>
         </children>
         <BorderPane.margin>
            <Insets bottom="15.0" left="15.0" right="15.0" />
         </BorderPane.margin>
      </HBox>
   </top>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <GridPane prefHeight="387.0" prefWidth="624.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <LineChart title="Parts Recieved">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </LineChart>
            <BarChart title="Parts Shipped" GridPane.rowIndex="1">
              <xAxis>
                <CategoryAxis side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </BarChart>
            <PieChart title="Percentage of Parts" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </center>
</BorderPane>
